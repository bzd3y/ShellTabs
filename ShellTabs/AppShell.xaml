				Title="4"
				ContentTemplate="{DataTemplate local:MainPage}"
				Route="Route4" />
			<ShellContent
				Title="5"
				ContentTemplate="{DataTemplate local:MainPage}"
				Route="Route5" />
			<ShellContent
				Title="6"
				ContentTemplate="{DataTemplate local:MainPage}"
				Route="Route6" />
			<ShellContent
				Title="7"
				ContentTemplate="{DataTemplate local:MainPage}"
				Route="Route7" />
		</Tab>
	</FlyoutItem>

</Shell>
